<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="gray_small_text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="article_tag_text">
        <item name="android:layout_margin">@dimen/spaceSmall</item>
        <item name="android:paddingTop">@dimen/spaceLittle</item>
        <item name="android:paddingBottom">@dimen/spaceLittle</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:paddingLeft">@dimen/spaceLittle</item>
        <item name="android:paddingStart">@dimen/spaceLittle</item>
        <item name="android:paddingRight">@dimen/spaceLittle</item>
        <item name="android:paddingEnd">@dimen/spaceLittle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
